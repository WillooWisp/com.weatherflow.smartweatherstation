        "sv": "Sky"
      },
      "class": "sensor",
      "capabilities": [
        "measure_rain",
        "measure_rain_day",
        "measure_luminance",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_gust_strength",
        "measure_uv",
        "measure_solarradiation",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/sky/assets/images/large.png",
