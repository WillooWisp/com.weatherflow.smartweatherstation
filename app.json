{
  "id": "com.weatherflow.smartweatherstation",
  "version": "0.2.2",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "brandColor": "#3077BF",
  "name": {
    "en": "Smart Weather Station"
  },
  "description": {
    "en": "Adds support for WeatherFlow's Smart Weather Station",
    "nl": "Voegt ondersteuning voor WeatherFlow's Smart Weather Station toe",
    "de": "Unterstützung für WeatherFlow's Smart Weather Station"
  },
  "tags": {
    "en": [ "weatherflow", "smart", "weather", "temperature", "rain", "wind", "lightning", "sensor" ],
    "nl": [ "weatherflow", "slim" , "weer", "temperatuur", "regen", "wind", "Bliksem", "sensor" ],
    "de": [ "Weaterhflow", "Smart", "Wetter", "Temperatur", "Regen", "Wind", "Blitz", "Sensor" ]
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Joel Fjordén",
    "email": "joel@fjorden.se"
  },
  "contributing": {
		"donate": {
		  "paypal": {
			"username": "willoowisp"
		  }
		}
	},
  "homeyCommunityTopicId": 9816,
  "capabilities": {
    "measure_rain_day": {
      "type": "number",
      "title": {
        "en": "Rain 24h",
        "nl": "Regen 24h",
        "de": "Regen 24h"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": "mm",
        "nl": "mm",
        "de": "mm"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_rain_day_capability.svg"
    },
    "measure_uv": {
      "type": "number",
      "title": {
        "en": "UV",
        "nl": "UV",
        "de": "UV"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": "index",
        "nl": "index",
        "de": "Index"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_uv_capability.svg"
    },
    "measure_solarradiation": {
      "type": "number",
      "title": {
        "en": "Solar Radiation",
        "nl": "Zonnestraling",
        "de": "Sonnenstrahlung"
      },
      "getable": true,
      "setable": false,
      "decimals": 2,
      "units": {
        "en": "W/m^2",
        "nl": "W/m^2",
        "de": "W/m^2"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_solarradiation_capability.svg"
    },
    "measure_lightningstrike_count": {
      "type": "number",
      "title": {
        "en": "Lightning Strike Count",
        "nl": "Bikseminslag telling",
        "de": "Blitzschlagzählung"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": "",
        "nl": "",
        "de": ""
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_lightningstrike_capability.svg"
    },
    "measure_lightningstrike_distance": {
      "type": "number",
      "title": {
        "en": "Lightning Strike Distance",
        "nl": "Afstand Bliksem inslag ",
        "de": "Blitzschlag-Entfernung"
      },
      "getable": true,
      "setable": false,
      "decimals": 2,
      "units": {
        "en": "km",
        "nl": "km",
        "de": "km"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_lightningstrike_capability.svg"
    }
  },
  "drivers": [
    {
      "id": "air",
      "name": {
        "en": "Air",
        "nl": "Air",
        "de": "Air"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_lightningstrike_count",
        "measure_lightningstrike_distance",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/air/assets/images/large.png",
        "small": "/drivers/air/assets/images/small.png"
      },
      "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            },
            "options": {
              "singular": false
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
      ]
    },
    {
      "id": "sky",
      "name": {
        "en": "Sky",
        "nl": "Sky",
        "de": "Sky"
      },
      "class": "sensor",
      "capabilities": [
        "measure_rain",
        "measure_rain_day",
        "measure_wind_strength",
        "measure_wind_angle",        
        "measure_gust_strength",
        "measure_luminance",
        "measure_uv",
        "measure_solarradiation",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/sky/assets/images/large.png",
        "small": "/drivers/sky/assets/images/small.png"
      },
      "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            },
            "options": {
              "singular": false
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "rain_start",
        "title": {
          "en": "It starts raining",
          "nl": "Het begint te regenen",
          "de": "Es beginnt zu regnen"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          }
        ]
      },
      {
        "id": "wind_above",
        "title": {
          "en": "It is more wind than...",
          "nl": "Het waait harder dan...",
          "de": "Es bläst härter als ..."
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "wind_below",
        "title": {
          "en": "It is less wind than...",
          "nl": "Het waait minder hard dan...",
          "de": "Es weht weniger als..."
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_raining",
        "title": {
          "en": "It !{{is|isn't}} raining",
          "nl": "Het regent !{{ |niet}}",
          "de": "es regnet !{{ |nicht}}"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          }
        ]
      },
      {
        "id": "is_windy",
        "title": {
          "en": "It !{{is|isn't}} blowing heavy",
          "nl": "Het waait !{{ |niet}} hard",
          "de": "Es weht !{{ |nicht}} hart"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 1,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}