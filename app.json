  "drivers": [
    {
      "id": "air",
      "name": {
        "en": "Air",
        "nl": "Air",
        "de": "Air",
        "sv": "Air"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_lightningstrike_count",
        "measure_lightningstrike_distance",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/air/assets/images/large.png",
        "small": "/drivers/air/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": false
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "sky",
      "name": {
        "en": "Sky",
