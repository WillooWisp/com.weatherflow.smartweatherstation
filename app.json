{
  "id": "com.weatherflow.smartweatherstation",
  "version": "0.2.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "brandColor": "#3077BF",
  "name": {
    "en": "Smart Weather Station"
  },
  "description": {
    "en": "Adds support for WeatherFlow's Smart Weather Station"
  },
  "tags": {
    "en": [ "weatherflow smart weather temperature rain wind sensor" ]
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Joel Fjord√©n",
    "email": "joel@fjorden.se"
  },
  "contributing": {
		"donate": {
		  "paypal": {
			"username": "willoowisp"
		  }
		}
	},
  "homeyCommunityTopicId": 9816,
  "capabilities": {
    "measure_rain_day": {
      "type": "number",
      "title": {
        "en": "Rain 24h"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": "mm"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_rain_day_capability.svg"
    },
    "measure_uv": {
      "type": "number",
      "title": {
        "en": "UV"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": "index"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_uv_capability.svg"
    },
    "measure_solarradiation": {
      "type": "number",
      "title": {
        "en": "Solar Radiation"
      },
      "getable": true,
      "setable": false,
      "decimals": 2,
      "units": {
        "en": "W/m^2"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_solarradiation_capability.svg"
    },
    "measure_lightningstrike_count": {
      "type": "number",
      "title": {
        "en": "Lightning Strike Count"
      },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "units": {
        "en": ""
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_lightningstrike_capability.svg"
    },
    "measure_lightningstrike_distance": {
      "type": "number",
      "title": {
        "en": "Lightning Strike Distance"
      },
      "getable": true,
      "setable": false,
      "decimals": 2,
      "units": {
        "en": "km"
      },
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/measure_lightningstrike_capability.svg"
    }
  },
  "drivers": [
    {
      "id": "air",
      "name": {
        "en": "Air"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_lightningstrike_count",
        "measure_lightningstrike_distance",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/air/assets/images/large.png",
        "small": "/drivers/air/assets/images/small.png"
      },
      "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            },
            "options": {
              "singular": false
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
      ]
    },
    {
      "id": "sky",
      "name": {
        "en": "Sky"
      },
      "class": "sensor",
      "capabilities": [
        "measure_rain",
        "measure_rain_day",
        "measure_wind_strength",
        "measure_wind_angle",        
        "measure_gust_strength",
        "measure_luminance",
        "measure_uv",
        "measure_solarradiation",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/sky/assets/images/large.png",
        "small": "/drivers/sky/assets/images/small.png"
      },
      "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            },
            "options": {
              "singular": false
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "rain_start",
        "title": {
          "en": "It starts raining"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          }
        ]
      },
      {
        "id": "wind_above",
        "title": {
          "en": "It is more wind than..."
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "wind_below",
        "title": {
          "en": "It is less wind than..."
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_raining",
        "title": {
          "en": "It !{{is|isn't}} raining"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          }
        ]
      },
      {
        "id": "is_windy",
        "title": {
          "en": "It !{{is|isn't}} blowing heavy"
        },
        "args": [
          {
            "type": "device",
            "name": "sky",
            "filter": "driver_id=sky"
          },        
          {
            "type": "range",
            "name": "wind_speed",
            "min": 1,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}