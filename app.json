        "sv": "Tempest"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_pressure",
        "measure_luminance",
        "measure_uv",
        "measure_wind_strength",
        "measure_wind_angle",
        "measure_gust_strength",
        "measure_lightningstrike_count",
        "measure_lightningstrike_distance",
        "measure_rain",
        "measure_rain_day",
        "measure_solarradiation",
        "measure_voltage"
      ],
      "images": {
        "large": "/drivers/tempest/assets/images/large.png",
