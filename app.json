  "flow": {
    "triggers": [
      {
        "id": "rain_start",
        "title": {
          "en": "It starts raining",
          "nl": "Het begint te regenen",
          "de": "Es beginnt zu regnen",
          "sv": "Det börjar regna"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          }
        ]
      },
      {
        "id": "rain_stop",
        "title": {
          "en": "It stops raining",
          "nl": "Het houdt op met regenen",
          "de": "Es hört auf zu regnen",
          "sv": "Det slutar regna"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          }
        ]
      },
      {
        "id": "wind_above",
        "title": {
          "en": "It is more wind than...",
          "nl": "Het waait harder dan...",
          "de": "Es bläst härter als...",
          "sv": "Det blåser mer än..."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          },
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "wind_below",
        "title": {
          "en": "It is less wind than...",
          "nl": "Het waait minder hard dan...",
          "de": "Es weht weniger als...",
          "sv": "Det blåser mindre än..."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          },
          {
            "type": "range",
            "name": "wind_speed",
            "min": 0,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_raining",
        "title": {
          "en": "It !{{is|isn't}} raining",
          "nl": "Het regent !{{ |niet}}",
          "de": "es regnet !{{ |nicht}}",
          "sv": "Det regnar !{{ |inte}}"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          }
        ]
      },
      {
        "id": "is_windy",
        "title": {
          "en": "It !{{is|isn't}} windy",
          "nl": "Het waait !{{ |niet}}",
          "de": "Es weht !{{ |nicht}}",
          "sv": "Det !{{är|är inte}} blåsigt"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=sky|tempest"
          },
          {
            "type": "range",
            "name": "wind_speed",
            "min": 1,
            "max": 50,
            "step": 1,
            "label": "m/s",
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}